<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- todo transparent status bar pre-lollipop-->
    </style>

    <style name="highlightTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/black_10</item>
    </style>

    <style name="WelcomeCirclePageIndicator">
        <item name="fillColor">@color/white</item>
        <item name="pageColor">@color/black_20</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

    <style name="SignInEditText" parent="AppTheme">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ActionBar.ThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="ActionBar.ThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    
    <style name="ProfileIcons">
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/padding_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/padding_xxlarge</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="track_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="track">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/padding_xxlarge</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="about_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_medium</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="about_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_medium</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/about_body_top</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>
