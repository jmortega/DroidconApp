<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingBottom="@dimen/height_small"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
android:layout_weight="1"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_xlarge"
                android:text="CODE LAB Powered By Twilio"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/sponsor_section_padding"
                android:id="@+id/twilio"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/sponsor_section_padding"
                android:paddingTop="@dimen/sponsor_section_padding"
                android:id="@+id/couchbase"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/sponsor_section_padding"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sponsor_padding"
                    android:id="@+id/firebase"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sponsor_padding"
                    android:id="@+id/commonsware"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_xlarge"
                android:text="PARTY SPONSORS"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/sponsor_section_padding"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sponsor_padding"
                    android:id="@+id/dramafever"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sponsor_padding"
                    android:id="@+id/bignerdranch"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_xlarge"
                android:text="COMMUNITY SPONSORS"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/sponsor_section_padding"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sponsor_padding"
                    android:id="@+id/mirego"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sponsor_padding"
                    android:id="@+id/lyft"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_xlarge"
        android:layout_gravity="center"
        android:text="... and, more sponsors"
        android:textColor="@color/orange"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        />

</LinearLayout>